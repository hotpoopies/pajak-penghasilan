<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/line_background"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_number"

        app:layout_constraintRight_toLeftOf="@id/content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="5dp"
        app:layout_constraintHeight_percent=".1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text ="1"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/content"
        app:layout_constraintLeft_toRightOf="@id/item_number"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="5dp"
        app:layout_constraintHeight_percent=".2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text ="Future Value of Periodic Payments"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/tglTextView"
        app:layout_constraintLeft_toRightOf="@id/item_number"
        app:layout_constraintTop_toBottomOf="@id/content"
        android:padding="5dp"
        app:layout_constraintHeight_percent=".5"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text ="25-01-2023 14:00:00:00"
        android:textAppearance="?attr/textAppearanceListItem" />

    <ImageView
        android:id="@+id/imageDelete"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.2"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        android:src="@drawable/ic_baseline_indeterminate_check_box_24" />
</androidx.constraintlayout.widget.ConstraintLayout>